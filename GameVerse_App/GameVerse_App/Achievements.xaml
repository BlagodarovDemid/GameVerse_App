<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameVerse_App.Achievements" Background="{StaticResource MainColor}" Appearing="Achievements_Appearing" Padding="10,0,10,0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.075*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Fill">
            <Label Text="Достижения" Style="{StaticResource GameCenterTitle}"/>
        </Grid>
        <ScrollView Grid.Row="1" Orientation="Vertical" HorizontalOptions="Fill" VerticalOptions="Fill">
            <FlexLayout x:Name="GameAchievements" HorizontalOptions="Fill" VerticalOptions="Fill" AlignItems="Start" AlignContent="Start" Wrap="Wrap" Padding="5,5,0,0"/>
        </ScrollView>
    </Grid>
</ContentPage>